<mod:findName type="event" name="STORAGE_CHECK_BUTTON">
  <mod-append:choice>
    <text>Change your Choice Info options.</text>
    <event load="STORAGE_CHECK_CHOICEINFO_OPTIONS"/>
  </mod-append:choice>
</mod:findName>

<event name="STORAGE_CHECK_CHOICEINFO_OPTIONS">
